@model DomainModel.Entities.Product

@Styles.Render("~/Content/css")
@Scripts.Render("~/bundles/bootstrap")

<table class="table table-bordered">
    <thead>
        <tr>
            <th align="center"> Бренд </th>
            <th align="center"> Артикул </th>
            <th align="center"> Описание </th>
            <th align="center"> Цена </th>
            <th align="center"> Количество </th>
            <th align="center"> Выбор</th>
        </tr>
        </thead>
    <tbody>
        <tr>
            <td align="center" width="10%"> @Model.Brand.Name</td>
            <td align="center" width="15%"> @Model.Articul</td>
            <td align="center" width="45%"> @Model.Description </td>
            <td align="center" width="10%"> @Model.Price.ToString("c") </td>
            <td align="center" width="10%"> @Model.Quantity </td>

            <td align="center" width="10%">
                @using (Html.BeginForm("AddToOrder", "Order"))
                {
                    @Html.TextBoxFor(x => x.Quantity, new { style = "width:35px" })
                    @Html.HiddenFor(x => x.Id)
                    <input type="submit" value="Add" class="btn-success" style="width:40px" />
                }
            </td>

        </tr>
        </tbody>
</table>
